{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Ranking of Death Causes",
        "frame": "bounds"
    },
    "height": 300,
    "width": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/death-rate-by-risk-factor.csv"
    },
    "transform": [
        {
            "calculate": "datum.Rate * 1",
            "as": "Rate"
        },
        {
            "sort": [{ "field": "Rate", "order": "descending" }],
            "window": [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "groupby": ["Country"]
        },
        {
            "filter": "datum.Factor !== 'High LDL cholesterol'"
        },
        {
            "filter": "datum.Factor !== 'High body-mass index'"
        },
        {
            "filter": "datum.Factor !== 'Kidney dysfunction'"
        }
    ],

    "layer": [
        {
            "params": [
                {
                    "name": "hover",
                    "value": [{ "Factor": "Air pollution" }],
                    "select": {
                        "type": "point",
                        "fields": ["Factor"],
                        "on": "mouseover"
                    }
                }
            ],
            "mark": {
                "type": "line",
                "strokeWidth": 8,
                "stroke": "transparent"
            }
        },
        { "mark": { "type": "line", "cursor": "pointer", "point": true } }
    ],
    "encoding": {
        "x": { "field": "Country", "type": "nominal" },
        "y": { "field": "rank", "type": "ordinal", "title": "Ranking" },
        "opacity": {
            "condition": {
                "param": "hover",
                "value": 1
            },
            "value": 0.2
        },
        "color": {
            "condition": {
                "param": "hover",
                "field": "Factor",
                "type": "nominal",
                "title": "Death Causes",
                "scale": {
                    "domain": [
                        "Air pollution",
                        "Alcohol use",
                        "Drug use",
                        "Lead exposure",
                        "Occupational risks",
                        "Smoking",
                        "Unsafe water source",
                        "High systolic blood pressure"
                    ],
                    "range": ["#7e7f80", "#e07a5f", "#f7a072", "#c0987e", "#7ABFC4", "#196795", "#FBF0B2", "#fca311"]
                }
            },
            "value": "grey"
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
            },
            { "field": "Factor", "type": "nominal", "title": "Factor" },
            {
                "field": "Rate",
                "type": "quantitative",
                "title": "Death Rate",
                "format": ".1f"
            },
            { "field": "rank", "type": "ordinal", "title": "Ranking" }
        ]
    },
    "config": {
        "title": { "fontSize": 20 },
        "axis": {
            "grid": true,
            "gridColor": "#dedede",
            "gridOpacity": 0.1,
            "titleFontSize": 15
        }
    }
}
