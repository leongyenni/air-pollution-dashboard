{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Ranking of Death Causes",
        "frame": "bounds"
    },
    "height": 200,
    "width": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/disease-burden-by-risk-factor.csv"
    },
    "transform": [
        {
            "calculate": "datum.Rate * 1",
            "as": "Rate"
        },
        {
            "sort": [{ "field": "Rate", "order": "descending" }],
            "window": [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "groupby": ["Country"]
        },
        {
            "filter": "datum.Factor !== 'High LDL cholesterol'"
        },
        {
            "filter": "datum.Factor !== 'High body-mass index'"
        },
        {
            "filter": "datum.Factor !== 'Kidney dysfunction'"
        }
    ],
    "mark": { "type": "line", "point": true },
    "encoding": {
        "x": { "field": "Country", "type": "nominal" },
        "y": { "field": "rank", "type": "ordinal" },
        "color": {
            "field": "Factor",
            "type": "nominal",
            "title": "Death Causes",
            "scale": {
                "domain": [
                    "Air pollution",
                    "Alcohol use",
                    "Drug use",
                    "Lead exposure",
                    "Occupational risks",
                    "Smoking",
                    "Unsafe water source"
                ],
                "range": [
                    "#417D7A",
                    "#91C483",
                    "#FFB085",
                    "#DF7861",
                    "#9C3D54",
                    "#FF96AD",
                    "#E15FED",
                    "#3F52E3",
                    "#7692E4"
                ]
            }
        },
        "tooltip": [
            { "field": "Country", "type": "nominal", "title": "Country" },
            { "field": "Factor", "type": "nominal", "title": "Factor" },
            {
                "field": "Rate",
                "type": "quantitative",
                "title": "Death Rate",
                "format": ".1f"
            },
            { "field": "rank", "type": "ordinal", "title": "Ranking" }
        ]
    },
    "params": [
        {
            "name": "hover",
            "select": {
                "type": "point",
                "fields": ["Factor"],
                "nearest": true,
                "on": "mouseover",
                "clear": "mouseout"
            }
        }
    ]
}
