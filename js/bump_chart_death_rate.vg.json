{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Ranking of Death Causes",
        "frame": "bounds"
    },
    "height": 300,
    "width": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/rank-death-cause-year.csv"
    },
    "params": [
        {
            "name": "year_selection",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 1990,
                "max": 2019,
                "step": 1,
                "name": "Year"
            }
        }
    ],
    "transform": [],
    "layer": [
        {
            "params": [
                {
                    "name": "hover",
                    "value": [{ "death_cause": "Air pollution" }],
                    "select": {
                        "type": "point",
                        "fields": ["death_cause"],
                        "on": "mouseover",
                        "clear": "mouseout"
                    }
                }
            ],
            "transform": [
                {
                    "filter": "datum.year == year_selection"
                }
            ],
            "mark": {
                "type": "line",
                "strokeWidth": 8,
                "stroke": "transparent"
            }
        },
        {
            "transform": [
                {
                    "filter": "datum.year == year_selection"
                }
            ],
            "mark": { "type": "line", "cursor": "pointer", "point": true }
        }
    ],
    "encoding": {
        "x": { "field": "country", "type": "nominal" },
        "y": { "field": "rank", "type": "ordinal", "title": "Ranking" },
        "opacity": {
            "condition": {
                "param": "hover",
                "value": 1
            },
            "value": 0.2
        },
        "color": {
            "condition": {
                "param": "hover",
                "field": "death_cause",
                "type": "nominal",
                "title": "Death Causes",
                "scale": {
                    "domain": [
                    "Lead exposure",
                    "Air pollution",
                    "Alcohol use",
                    "Drug use",
                    "Dietary risks",
                    "Occupational risks",
                    "Smoking",
                    "Unsafe water source"
                ],
                "range": ["#FCA311", "#7e7f80", "#e07a5f", "#f7a072", "#c0987e", "#7ABFC4", "#196795", "#FBF0B2"]
                }
            },
            "value": "grey"
        },
        "tooltip": [
            {
                "field": "country",
                "type": "nominal",
                "title": "Country"
            },
            { "field": "death_cause", "type": "nominal", "title": "Death Cause" },
            {
                "field": "val",
                "type": "quantitative",
                "title": "Death Rate",
                "format": ".1f"
            },
            { "field": "rank", "type": "ordinal", "title": "Ranking" },
            { "field": "year", "type": "ordinal", "title": "Year" }
        ]
    },
    "config": {
        "title": { "fontSize": 20 },
        "axis": {
            "grid": true,
            "gridColor": "#dedede",
            "gridOpacity": 0.1,
            "titleFontSize": 15
        }
    }
}
