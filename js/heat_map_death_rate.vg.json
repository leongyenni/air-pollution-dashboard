{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json","background":"black",
  "data": {
    "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/death-rate-by-risk-factor.csv"
  },
 "transform": [
    {"filter": "datum.Country !== 'Global'"},
    {"filter": "datum.Factor !== 'All risk factors'"}
  ],
  "width": 200,
  "height": 350,
  "mark": {"type": "rect"},
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "sort": "ascending",
      "title": "Country"
    },
    "y": {
      "field": "Factor",
      "type": "nominal",
      "sort": "ascending",
      "title": "Factor"
    },
    "tooltip": {
      "field": "Death Rate",
      "type": "quantitative",
      "format": ".2f"
    },
    "color": {
      "field": "Death Rate",
      "type": "quantitative",
      "scale": {"scheme": "tealblues", "type": "linear", "reverse": false},
      "legend": {"title": "Number of Death", "titleFontSize": 12, "titlePadding": 4, "titleColor": "white", "labelColor": "white"}
    }
  },
  "config": {
    "axis": {
      "grid": false,
      "tickBand": "center",
      "labelBaseline": "middle",
      "titleFontSize": 11,
      "titleColor": "white",
      "labelFontSize": 10,
      "labelColor": "white"
    }
  }
}