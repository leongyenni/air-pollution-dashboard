{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Ranking of Disease Causes",
        "frame": "bounds"
    },
    "height": 200,
    "width": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/disease-burden-by-risk-factor.csv"
    },
    "transform": [
        {
            "calculate": "datum.Rate * 1",
            "as": "Rate"
        },
        {
            "sort": [{ "field": "Rate", "order": "descending" }],
            "window": [
                {
                    "op": "rank",
                    "as": "rank"
                }
            ],
            "groupby": ["Country"]
        },
        {
            "filter": "datum.Factor !== 'High LDL cholesterol'"
        },
        {
            "filter": "datum.Factor !== 'High body-mass index'"
        },
        {
            "filter": "datum.Factor !== 'Kidney dysfunction'"
        }
    ],

    "layer": [
        {
            "params": [
                {
                    "name": "hover",
                    "value": [{ "Factor": "Air pollution" }],
                    "select": {
                        "type": "point",
                        "fields": ["Factor"],
                        "on": "mouseover"
                    }
                }
            ],
            "mark": {
                "type": "line",
                "strokeWidth": 8,
                "stroke": "transparent"
            }
        },
        { "mark": { "type": "line", "cursor": "pointer", "point": true } }
    ],
    "encoding": {
        "x": { "field": "Country", "type": "nominal" },
        "y": { "field": "rank", "type": "ordinal" },
        "opacity": {
            "condition": {
                "param": "hover",
                "value": 1
            },
            "value": 0.2
        },
        "color": {
            "condition": {
                "param": "hover",
                "field": "Factor",
                "type": "nominal",
                "title": "Disease Causes",
                "scale": {
                    "domain": [
                        "Air pollution",
                        "Alcohol use",
                        "Drug use",
                        "Lead exposure",
                        "Occupational risks",
                        "Smoking",
                        "Unsafe water source"
                    ],
                    "range": [
                        "#417D7A",
                        "#91C483",
                        "#FFB085",
                        "#DF7861",
                        "#9C3D54",
                        "#FF96AD",
                        "#E15FED",
                        "#3F52E3",
                        "#7692E4"
                    ]
                }
            },
            "value": "grey"
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
            },
            { "field": "Factor", "type": "nominal", "title": "Factor" },
            {
                "field": "Rate",
                "type": "quantitative",
                "title": "Disease Burden",
                "format": ".1f"
            },
            { "field": "rank", "type": "ordinal", "title": "Ranking" }
        ]
    },
    "config": {}
}
