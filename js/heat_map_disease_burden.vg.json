{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json","background":"white",
  "title": "Disease Burden by Risk Factor",
  "data": {
    "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/disease-burden-by-risk-factor.csv"
  },
  "width": 200,
  "height": 350,
  "mark": {"type": "rect"},
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "sort": "ascending",
      "title": "Country"
    },
    "y": {
      "field": "Factor",
      "type": "nominal",
      "sort": "ascending",
      "title": "Factor"
    },
    "tooltip": {
      "field": "Rate",
      "type": "quantitative",
      "format": ".2f"
    },
    "color": {
      "field": "Rate",
      "type": "quantitative",
      "scale": {"scheme": "tealblues", "type": "linear", "reverse": false},
      "legend": {"title": "DALYs Rate", "titleFontSize": 12, "titlePadding": 4, "titleColor": "black", "labelColor": "black"}
    }
  },
  "config": {
    "axis": {
      "grid": false,
      "tickBand": "center",
      "labelBaseline": "middle",
      "titleFontSize": 11,
      "titleColor": "black",
      "labelFontSize": 10,
      "labelColor": "black"
    }
  }
}