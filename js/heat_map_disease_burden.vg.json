{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Death Rate by Risk Factor (Factor Ranking)",
  "data": {
    "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/disease-burden-by-risk-factor.csv"
  },
  "width": 200,
  "height": 350,
  "transform": [
    {
      "calculate": "datum.Rate * 1",
      "as": "RateQuantitative"
    },
    {
      "groupby": ["Country"],
      "window": [
        {
          "op": "rank",
          "as": "FactorRank"
        }
      ],
      "sort": [{"field": "RateQuantitative", "order": "descending"}]
    }
  ],
  "layer": [
    {
      "mark": {"type": "rect"},
      "encoding": {
        "x": {
          "field": "Country",
          "type": "nominal",
          "title": "Country"
        },
        "y": {
          "field": "Factor",
          "type": "nominal",
          "title": "Factor"
        },
        "color": {
          "field": "RateQuantitative",
          "type": "quantitative",
          "scale": {"scheme": "tealblues", "type": "linear", "reverse": false},
          "legend": {"title": "Death Rate", "titleFontSize": 12, "titlePadding": 4, "titleColor": "black", "labelColor": "black"}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Factor", "type": "nominal", "title": "Factor"},
          {"field": "RateQuantitative", "type": "quantitative", "title": "Death Rate", "format": ".1f"},
          {"field": "FactorRank", "type": "ordinal", "title": "Factor Rank"}
        ]
      }
    },
    {
      "mark": {"type": "text", "align": "center", "baseline": "middle", "dx": 0, "dy": 0, "fontSize": 10, "color": "black"},
      "encoding": {
        "text": {"field": "FactorRank", "type": "ordinal"},
        "x": {"field": "Country", "type": "nominal"},
        "y": {"field": "Factor", "type": "nominal"}
      }
    }
  ],
  "config": {
    "axis": {
      "grid": false,
      "tickBand": "center",
      "labelBaseline": "middle",
      "titleFontSize": 11,
      "titleColor": "black",
      "labelFontSize": 10,
      "labelColor": "black"
    }
  }
}
