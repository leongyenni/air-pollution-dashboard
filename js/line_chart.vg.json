{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/death-rates-from-air-pollution-year.csv"},
  "width": 850,
  "height": 450,
  "title": "Death rate from air pollution (1990 to 2019)",
    
  "encoding": {"x": {"field": "Year", "type": "temporal"}},
  "layer": [
    {
      "encoding": {
        "color": {"field": "Country", "type": "nominal", "title": "Country"},
        "y": {"field": "Death Rate", "type": "quantitative"}
      },
      "layer": [
        {"mark": "line"},
        {"transform": [{"filter": {"param": "hover", "empty": false}}], "mark": "point"}
      ]
    },
    {
      "transform": [{"pivot": "Country", "value": "Death Rate", "groupby": ["Year"]}],
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover"},
          "value": 0
        },
        "tooltip": [
          {"field": "China", "type": "quantitative"},
          {"field": "India", "type": "quantitative"},
          {"field": "Japan", "type": "quantitative"},
          {"field": "Malaysia", "type": "quantitative"},
          {"field": "Switzerland", "type": "quantitative"},
          {"field": "United Kingdom", "type": "quantitative"},
          {"field": "United States", "type": "quantitative"},
          {"field": "World", "type": "quantitative"},
          {"field": "Year", "type": "temporal", "format": "%Y"}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Year"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    }
  ], "config": {"title": { "fontSize": 20}}
}
