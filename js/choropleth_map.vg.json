{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Death Rate from Air Pollution",
  "width": 1000,
  "height": 500,
  "projection": {
    "type": "equalEarth", 
    "scale": {"expr": "zoom_level"},
    "rotate": [-20, 0, 0],
    "center": {"expr": "center_to"}},
  "params": [
    {
      "name": "zoom_level",
      "value": 150,
      "bind": {
        "input": "range",
        "min": 100,
        "max": 300,
        "step": 50,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [81, 144],
          [-60, -22],
          [9, 1],
          [130, -30],
          [-90, 120]
        ],
        "labels": [
          "Whole map",
          "Asia & Europe",
          "South America",
          "Africa",
          "Asia Pacific",
          "North America"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
   "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "gray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    }, 
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#c6dbef"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "steelblue"}
    },
    {
    "transform": [
        {
        "lookup": "properties.NAME",
        "from": {
            "data": {
            "url": "https://raw.githubusercontent.com/leongyenni/air-pollution-dashboard/master/data/death-rate-air-pollution-world.csv"
            },
            "key": "Country",
            "fields": ["Death rate"]
          }
        }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
        "field": "Death rate",
        "type": "quantitative",
          "scale":{"type": "threshold",
                "domain": [0,25,50,100,250,500],
                "scheme": "tealblues"},
        "legend": {"title": "Death Rate"}
        },
        "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Death rate", "type": "quantitative", "format": ".1f"}
            ]
        }
    }
],
  "config": {
    "title": { "fontSize": 20}
  }
}

